{
  "manifest_version": 2,

  "name": "Cryptotick",
  "description": "Cryptocurrency ticker",
  "version": "0.1",

  "browser_action": {
    "default_icon": "imgs/btc16.png",
    "default_popup": "index.html"
  },

  "icons": {
    "16": "imgs/btc16.png",
    "64": "imgs/btc64.png",
    "128": "imgs/btc128.png"
  },
  "web_accessible_resources": [

          ],
  "permissions": [
    "notifications",
    "storage",
    "background",
    "idle",
    "https://api.coinmarketcap.com/",
    "https://files.coinmarketcap.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background":
    {   "css": ["index.css"],
        "page": "index.html",
        "persistent": true
    }
}
